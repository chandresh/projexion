<div id="content">
  <div id="features" style="float:left">
    <h1>
      Product Features for <%= @project.name %> 
    </h1>
    <% unless @features.empty? %>
        <table>
        <% for feature in @features %>
            <tr>
              <td><%= h feature.user_story %></td>
              <td>
                  <% link_to project_feature_path(@project.code, feature.id) do %>
                    <img src="/images/icons/application_view_detail.png">
                  <% end %>
              </td>
            </tr>
        <% end %>
        </table>
     <% else %>
        <p class="info">
        There are no features yet.
        </p>
     <% end %>   
    <%# TODO: Paginate list %>
  </div>

  <div id="info-box" style="float:right">
    <strong>Project:</strong>&nbsp;<%= @project.name %><br/>
    <% if @release %>
        <strong>Release:</strong>&nbsp;<%= @release.version_number %><br/>
        <strong>Estimate release date:</strong> <%= @release.estimate_date %>
    <% elsif @sprint %>
        <strong>Sprint:</strong>&nbsp;<%= @sprint.span_date %><br/>
        <strong>Goal:</strong> <%= @sprint.goal %>
      <% end %>    
  </div>

  <div style="clear:both"></div>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Project Dashboard', project_path(@project.code), :class => 'dashboard' %></li>
  </ul>  
  <%# TODO: Add back link to release list or sprint list depending on where it came from %>
  <%# TODO: Add meeting link %>
</div>