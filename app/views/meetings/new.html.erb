<div id="content">
  <div>
    <% form_for @meeting, :url => project_meetings_path(@project.code) do |f| %>

        <p>
          <%= f.label :start_time %><br />
          <%= f.datetime_select :start_time, :order => [:day, :month, :year] %>
        </p>

        <p>
          <%= f.label :end_time %><br />
          <%= f.datetime_select :end_time, :order => [:day, :month, :year] %>
        </p>

        <p>
          <%= f.label :meeting_type %><br/>
          <%= f.collection_select(:meeting_type_id, @meeting_types, :id, :name, {:include_blank => true}) %>
        </p>

        <p>
          <%= f.label :location %><br/>
          <%= f.text_field :location %>
        </p>
        <%# TODO: Additional attendees %>
        <%# TODO: Add RTE for agenda %>
        <p>
          <%= f.submit 'Save', :class=> 'save_btn' %>
        </p>
    <% end %>
  </div>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Project Dashboard', project_path(@project.code), :class => 'dashboard' %></li>
    <li><%= link_to 'Meetings', project_meetings_path(@project.code), :class => 'list' %></li>
  </ul>
</div>