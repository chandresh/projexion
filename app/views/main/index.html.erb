<div id="content">
	<p class="success"><span ><%= flash[:notice] %></span></p>
	
    <h2>My Projects</h2>
    <table width="100%">
        <tr>
            <th width="10%">Code</th>
            <th>Project Name</th>
            <th>&nbsp;</th>
        </tr>

        <% @projects.each do |project| %>
        <tr>
            <td style="text-align:center;"><%= link_to project.code, project_path(project.code) %></td>
            <td><%= h project.name %></td>
            <td>
              <% link_to project_path(project.code) do %>
                <img src="/images/icons/application_view_detail.png">
              <% end %>
            </td>
        </tr>
        <% end %>
    </table>

	<h2>Latest events</h2>
    <table width="100%">
        <tr>
          <th>Project Name</th>
          <th>Event Name</th>
          <th>User</th>
        </tr>
        <% @events.each do |event| %>
        <tr>
          <td><%= event.project.name %></td>
          <td>
              <%= link_to event.model + " " + event.action, {:controller => event.model.downcase + 's', :action => :show, :id => event.model_id} %>
          </td>
          <td><%= event.user.login %></td>
        </tr>
        <% end %>
    </table>
</div>

