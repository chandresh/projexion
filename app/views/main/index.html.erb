<% content_for :title do %><title>Your Dashboard - Projexion</title><% end %>
<script type="text/javascript">
    $(document).ready(function(){
       $('.info-list').corner();
    });
  </script>
<div id="content">
	<p class="success"><span ><%= flash[:notice] %></span></p>

    <div style="float:left">
      <h1>Latest events</h1>
      <% unless @events.empty? %>
      <ul>
          <% @events.each do |event| %>
          <li class="info-list">
            <% if event.model.eql? 'Task' %>
              <% link_to ({:controller => event.model.downcase + 's', :action => :show, :id => event.model_id}),:rel => 'facebox' do%> 
                <%= event.model %>&nbsp;<%= event.action %>
              <% end %>
            <% else %>
              <% link_to ({:controller => event.model.downcase + 's', :action => :show, :id => event.model_id}) do%> 
                <%= event.model %>&nbsp;<%= event.action %>
              <% end %>
            <% end %>
            in&nbsp;<%= link_to event.project.name, project_path(event.project.code) %>&nbsp;
            by&nbsp;<%= link_to event.user.login, user_path(event.user.login) %>
            &nbsp;<%= time_ago_in_words(event.created_at) %>&nbsp;ago.
          </li>
          <% end %>
      </ul>
      <% else %>
        <p class="info">
            No events so far.
         </p>
      <% end %>
    </div>

    <div style="float:left;margin-left:5em;">
        <h1>Your Projects</h1>
        <% unless @projects.empty? %>
        <ul>
          <% @projects.each do |project| %>
          <li class="info-list" style="min-width:200px">
            <% link_to project_path(project.code) do %>
                <%= project.name %>&nbsp;(<%= project.code %>)
            <% end %><br/>
            <%= project.vision %>
          </li>
          <% end %>
        </ul>
        <% else %>
          <p class="info">
            You're not in a project yet.
         </p>
        <% end %>
    </div>

    <div style="float:left;margin-left:5em;">
        <h1>Next Scheduled Meetings</h1>
        <% unless @meetings.empty? %>
         <ul>
            <% @meetings.each do |meeting| %>
            <li class="info-list">
              <% link_to project_meeting_path(meeting.project.code, meeting) do %>
                <%= meeting.start_time %>  (in <%= distance_of_time_in_words_to_now(meeting.start_time) %>)<br/>                
              <% end %>
              <strong>Location</strong>:&nbsp;<%= meeting.location %><br/>
              <strong>Booked by</strong>:&nbsp;<%= link_to meeting.created_by, user_path(meeting.created_by) %><br/>
            </li>
            <% end %>
         </ul>
        <% else %>
         <p class="info">
            No scheduled meetings.
         </p>
        <% end %>
    </div>  
</div>