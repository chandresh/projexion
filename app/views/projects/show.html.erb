<div id="content">
  <div id="project">
      <p>
        <%= label_tag(:name) %><br/>
        <%= h @project.name %> - <%= h @project.code %>
      </p>

      <p>
        <%= label_tag(:vision) %><br/>
        <%= h @project.vision %>
      </p>
  </div>

  <% if @features.length > 0 %>
  <div id="features">
    <h2>Product Features</h2>
    <table>
    <% for feature in @features %>
        <tr>
            <td><%= link_to feature.id, project_feature_path(@project.code, feature.id) %></td>
            <td><%= h feature.user_story %></td>
        </tr>
    <% end %>
    </table>    
  </div>
  <% end %>    
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Edit Project', edit_project_path(@project) %></li>
    <li><%= link_to 'Delete Project', @project, :confirm => 'Are you sure?', :method => :delete %></li>
    <li><%= link_to 'Add New Feature', new_project_feature_path(@project.code) %></li>
    <li><%= link_to 'Project Releases', project_releases_path(@project.code) %></li>
    <li><%= link_to 'Project Sprints', project_sprints_path(@project.code) %></li>
  </ul>
</div>