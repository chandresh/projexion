<div id="content">
  <div id="project">
      <%= label_tag(:name) %><br />
      <%= h @project.name %><br/>

      <%= label_tag(:code) %><br />
      <%= h @project.code %><br />

      <%= label_tag(:vision) %><br />
      <%= h @project.vision %><br/>
  </div>

  <div id="features">
    <h2>Product Features</h2>
    <table>
    <% for feature in @features %>
        <tr>
            <td><%= link_to feature.id, project_feature_path(@project.code, feature.id) %></td>
            <td><%= h feature.user_story %></td>
        </tr>
    <% end %>
    </table>    
  </div>
</div>

<div id="sidebar">
    <%= link_to 'Edit Project', edit_project_path(@project) %>
    <%= link_to 'Delete Project', @project, :confirm => 'Are you sure?', :method => :delete %>
    <%= link_to 'Add New Feature', new_project_feature_path(@project.code) %>
    <%= link_to 'Project Releases', project_releases_path(@project.code) %>
    <%= link_to 'Sprints', project_sprints_path(@project.code) %>
</div>