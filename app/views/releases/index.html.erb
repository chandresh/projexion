<div id="content">
  <p class="success"><span ><%= flash[:notice] %></span></p>
  
  <div>
    <h1>Releases in <%= @project.name %></h1>

    <table width="100%" id="releases">
      <tr>
        <th>Version</th>
        <th>Estimate release date</th>
        <th>Released date</th>
        <th>Release goal</th>
        <th width="5%">&nbsp;</th>
      </tr>
    <% for release in @releases %>
        <tr>
            <td style="text-align:center;"><%= release.version_number %></td>
            <td style="text-align:center;"><%= release.estimate_date %></td>
            <td style="text-align:center;"><%= release.released_at %></td>
            <td style="text-align:center;"><%= release.goal %></td>
            <td style="text-align:center;">
                <% link_to project_release_path(@project.code, release.id), :title => view_release_title do %>
                    <img src="/images/icons/application_view_detail.png">
                <% end %>
            </td>
        </tr>
    <% end %>
    </table>
    <%= will_paginate @releases %>
  </div>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Project Dashboard', project_path(@project.code), :class => 'dashboard' %></li>
    <li><%= link_to 'Add New Release', new_project_release_path(@project.code), :class => 'add' %></li>
  </ul>
</div>