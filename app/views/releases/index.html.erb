<div id="content">
  <div>
    <h2>Releases in <%= @project.name %></h2>

    <table id="releases">
    <% for release in @releases %>
        <tr id="<%= h release.id %>">
            <td><%= h release.version_number %></td>
            <td><%= h release.estimate_date %></td>
            <td><%= link_to 'Features', project_release_features_path(@project.code, release.id) %></td>
            <td><%= link_to 'Delete', project_release_path(@project.code, release.id),
                            :confirm => 'Are you sure?', :method => :delete %></td>
        </tr>
    <% end %>
    </table>
  </div>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Project Dashboard', project_path(@project.code), :class => 'dashboard' %></li>
  </ul>
</div>