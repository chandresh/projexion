<div id="content">
  <p class="success"><span ><%= flash[:notice] %></span></p>
  
  <div>
    <h1>Releases in <%= @project.name %></h1>

    <table width="100%" id="releases">
      <tr>
        <th>Version</th>
        <th>Estimate release date</th>
      </tr>
    <% for release in @releases %>
        <tr>
            <td style="text-align:center;"><%= h release.version_number %></td>
            <td style="text-align:center;"><%= h release.estimate_date %></td>
            <td><%= link_to 'Features', project_release_features_path(@project.code, release.id) %></td>
            <td>
                <% link_to project_release_path(@project.code, release.id),
                                :confirm => 'Are you sure?', :method => :delete do %>
                    <img src="/images/icons/delete.png">
                <% end %>
            </td>
        </tr>
    <% end %>
    </table>
  </div>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Project Dashboard', project_path(@project.code), :class => 'dashboard' %></li>
  </ul>
</div>