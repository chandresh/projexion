<div id="content">
  <div id="task">
      <h1>Add New Release</h1>

      <%= flash[:notice] %>
      <% form_for @release, :url => project_releases_path(@project.code) do |f| %>
        <%= f.error_messages %>
        <p>
          <%= f.label :version_number %><br />
          <%= f.text_field :version_number, :size => 10 %>
        </p>

        <p>
          <%= f.label :estimate_date, 'Estimate release date' %><br />
          <%= f.text_field :estimate_date %>
        </p>

        <p>
          <%= f.submit 'Save' %>
        </p>
      <% end %>

      <%= button_to 'Cancel', project_path(@project.code), :confirm => "Are you sure?", :method => :get %>  
  </div>
  
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Project Dashboard', project_path(@project.code), :class => 'dashboard' %></li>
  </ul>
</div>