<div id="content">
    <p class="success"><span><%= flash[:notice] %></span></p>

    <div>
        <p>
          <%= label_tag :display_name %><br />
          <%= h @task_status.display_name %>
        </p>

        <p>
          <%= label_tag :key %><br />
          <%= h @task_status.key %>
        </p>

        <p>
          <%= label_tag :default_status %><br />
          <%= h @task_status.default_status %>
        </p>

        <p>
          <%= label_tag :color, 'Background color' %><br />
          <%# TODO: Make this label wider and higher with no corner %>
          <span style="background-color:<%= @task_status.color %>" class="status <%= h @task_status.key %>"><%= h @task_status.color %></span>
        </p>
    </div>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Task Status List', task_statuses_path, :class => 'list' %></li>
    <li><%= link_to 'Edit Task Status', edit_task_status_path(@task_status), :class => 'edit'  %></li>
    <li><%= link_to 'Delete Task Status', task_status_path(@task_status),
                :confirm => 'Are you sure?', :method => :delete, :class => 'delete' %></li>
  </ul>    
</div>