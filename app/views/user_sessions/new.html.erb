<div id="users_form">
    <fieldset>
    <legend>Login</legend>
    <%= form_for @user_session do |f|%>

      <% if f.object.errors.any? %>
        <div id="errorExplanation">
          <ul>
          <% f.object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
          
      <p>
        <%= f.label :login, 'Username' %><br />
        <%= f.text_field :login %>
      </p>

      <p>
        <%= f.label :password %><br />
        <%= f.password_field :password %><br />
      </p>
          
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %><br />
      <div class="small">Not registered yet? Please <%= link_to 'register', new_user_path %> first.</div>
      <br />
      <%= f.submit "Login" %>
    <% end %>
    </fieldset>
</div>