<div id="users_form">
    <fieldset>
    <legend>Login</legend>
    <% form_for @user_session do |f|%>
      <%= f.error_messages %>

      <p>
        <%= f.label :login, 'Username' %><br />
        <%= f.text_field :login %>
      </p>

      <p>
        <%= f.label :password %><br />
        <%= f.password_field :password %><br />
      </p>
          
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %><br />
      <div class="small">Not registered? Please <%= link_to 'register', new_user_path %> first.</div>
      <br />
      <%= f.submit "Login" %>
    <% end %>
    </fieldset>
</div>