<% content_for :title do %>Register&nbsp;:&nbsp;<%= @current_account.company.name %><% end %>

<div id="users_form">
  <h2>Register</h2>
  
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= render "shared/error_messages", :target => resource %>

    <div>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <%= f.hidden_field :account_id, :value => @current_account.id %>

    <div><%= f.submit "Register" %>&nbsp;or&nbsp;<%= link_to "Login", new_user_session_path %></div>
  <% end %>

  <%= render :partial => "devise/shared/links" %>
</div>