<div id="content">
	<p class="success"><span><%= flash[:notice] %></span></p>
	
    <% form_for(@user) do |f| %>
      <%= f.error_messages %>
	
	<p>
      <%= f.label :login %><br />
      <%= @user.login %>
    </p>
    
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %><br />
    </p>

        <% if @user.new_record? %>
          <%= f.submit 'Register' %>
        <% else %>
          <%= f.submit 'Update' %>
        <% end %>
    <% end %>

</div>

<div id="sidebar">
	<ul>
		<li><%= link_to 'Change Password', change_password_user_path(@user), :class => 'edit'  %></li>
	</ul>
</div>