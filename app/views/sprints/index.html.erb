<div id="content">
  <p class="success"><span ><%= flash[:notice] %></span></p>
  
  <div>
    <h1>Sprints in <%= @project.name %></h1>
    <table width="100%" id="sprints">
    <tr>
      <th>Sprint goal</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Velocities</th>
      <th>&nbsp;</th>
    </tr>
    <% for sprint in @sprints %>
      <tr id="<%= h sprint.id %>">
        <td><%= h sprint.goal %></td>
        <td style="text-align:center;"><%= h sprint.start_date %></td>
        <td style="text-align:center;"><%= h sprint.end_date %></td>
        <td style="text-align:center;"><%= h sprint.velocities %></td>
        <td>
          <% link_to project_sprint_path(@project.code, sprint.id) do %>
            <img src="/images/icons/application_view_detail.png">
          <% end %>
        </td>
      </tr>
    <% end %>      
    </table>
  </div>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Project Dashboard', project_path(@project.code), :class => 'dashboard' %></li>
    <li><%= link_to 'Add New Sprint', new_project_sprint_path(@project.code), :class => 'add' %></li>
  </ul>
</div>