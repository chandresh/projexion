<div id="content">
  <p class="success"><span ><%= flash[:notice] %></span></p>
  
  <div>
    <h1>Sprints in <%= @project.name %></h1>
    <%# TODO: Add cancel sprint link and cancelled date for cancelled sprint %>
    <table id="sprints">
    <% for sprint in @sprints %>
      <tr id="<%= h sprint.id %>">
        <td><%= h sprint.goal %></td>
        <td><%= h sprint.start_date %></td>
        <td><%= h sprint.end_date %></td>
        <td><%= h sprint.retrospective %></td>
        <td><%= link_to 'Features', project_sprint_features_path(@project.code, sprint.id) %></td>
      </tr>
    <% end %>      
    </table>
  </div>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Project Dashboard', project_path(@project.code), :class => 'dashboard' %></li>
  </ul>
</div>