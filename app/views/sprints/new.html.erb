<div id="content">
  <%= flash[:notice] %>

  <div id="sprint">
    <h2>Add New Sprint</h2>

    <% form_for @sprint, :url => project_sprints_path(@project.code) do |f| %>
          <%= f.error_messages %>

        <p>
          <%= f.label :goal, 'Sprint goal' %><br />
          <%= f.text_field :goal %>
        </p>

        <p>
          <%= f.label :start_date %><br />
          <%= f.text_field :start_date %>
        </p>

        <p>
          <%= f.label :end_date %><br />
          <%= f.text_field :end_date %>

        </p>
          <%= f.submit %>
        </p>
     <% end %>
  </div>  
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Project Dashboard', project_path(@project.code), :class => 'dashboard' %></li>
  </ul>
</div>