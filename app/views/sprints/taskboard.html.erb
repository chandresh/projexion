<div id="content">
    <%= @sprint.id %>

    <% for task_status in @task_statuses %>
       <%= task_status.display_name %> 
    <% end %>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Project Dashboard', project_path(@project.code), :class => 'dashboard' %></li>
  </ul>

  <h2>Sprint</h2>
    <% form_for :sprint, :url => { :action => :taskboard } do |f| %>
    <%= f.collection_select(:id, @sprints, :id, :span_date) %>

    <%= f.submit 'Show' %>        
  <% end %>    
</div>