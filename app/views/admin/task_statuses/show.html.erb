<div id="content">
    <p class="success"><span><%= flash[:notice] %></span></p>
    <script type="text/javascript">
      $(document).ready(function(){
        $('span.status').corner();
      });
    </script>
    <div>
        <div class="field_wrapper">
          <%= label_tag :display_name %>
          <%= h @task_status.display_name %>
        </div>

        <div class="field_wrapper">
          <%= label_tag :key %>
          <%= h @task_status.key %>
        </div>

       <% if @task_status.default %>
        <div class="field_wrapper">
          <%= label_tag :default_status %>
          <img src="/images/icons/accept.png"/>
        </div>
        <% end %>

        <div class="field_wrapper">
          <%= label_tag :color, 'Background color' %>
          <span class="status" style="padding:2px;background-color:<%= @task_status.hash_color %>">
            <%= @task_status.color %>
          </span>
        </div>
    </div>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Task Statuses', admin_task_statuses_path, :class => 'list' %></li>
    <li><%= link_to 'Edit Task Status', edit_admin_task_status_path(@task_status), :class => 'edit'  %></li>
    <li><%= link_to 'Delete Task Status', admin_task_status_path(@task_status),
                :confirm => 'Are you sure?', :method => :delete, :class => 'delete' %></li>
  </ul>    
</div>