<div id="content">
    <p class="success"><span><%= flash[:notice] %></span></p>

    <div>
        <p>
          <%= label_tag :name %><br />
          <%= h @meeting_type.name %>
        </p>

        <% unless @meeting_type.occurrence.nil? %>
        <p>
          <%= label_tag :occurrence %><br />
          <%= h @meeting_type.occurrence %>
        </p>
        <% end %>
      
        <p>
          <%= label_tag :description %><br />
          <%= h @meeting_type.description %>
        </p>
    </div>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Meeting Types', admin_meeting_types_path, :class => 'list' %></li>
    <li><%= link_to 'Edit Meeting Type', edit_admin_meeting_type_path(@meeting_type), :class => 'edit'  %></li>
    <li><%= link_to 'Delete Meeting Type', admin_meeting_type_path(@meeting_type),
                :confirm => 'Are you sure?', :method => :delete, :class => 'delete' %></li>
  </ul>
</div>