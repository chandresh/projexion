<div id="content">
  <p class="success"><span><%= flash[:notice] %></span></p>
  <div>
    <p>
      <%= label_tag :display_name %><br />
      <%= @priority.display_name %>
    </p>

    <p>
      <%= label_tag :priority_level %><br />
      <%= @priority.level %>
    </p>

    <p>
      <%= label_tag :default %><br />
      <%= @priority.default %>
    </p>

    <p>
      <%= label_tag :color, 'Background color' %><br />
      <span style="padding:2px;background-color:<%= @priority.hash_color %>" class="status"><%= @priority.color %></span>
    </p>
  </div>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Priorities', admin_priorities_path, :class => 'list' %></li>
    <li><%= link_to 'Edit Priority', edit_admin_priority_path(@priority), :class => 'edit'  %></li>
    <li><%= link_to 'Delete Priority', admin_priority_path(@priority),
                :confirm => 'Are you sure?', :method => :delete, :class => 'delete' %></li>
  </ul>
</div>