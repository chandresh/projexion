<% content_for :title do %>Admin&nbsp;:&nbsp;<%= @current_account.company.name %><% end %>

<div id="content">
  <p class="success"><span><%= flash[:notice] %></span></p>
  <%# TODO: Add project manager in list %>

  <div id="left">
    <%= form_for ([:admin, @project]) do |f| %>
    <%= render "shared/error_messages", :target => @project %>

    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :vision %>
      <%= f.text_field :vision, :size => 45 %>
    </div>

    <%= f.submit 'Save', :class=> 'save_btn' %>
    <% end %>
  </div>

  <div id="right">
  <ul>
    <% @projects.each do |project| %>
    <li>
      <label><%= link_to project.name, project_path(project.code) %></label><br/>
      <%= project.vision %>
    </li>
    <% end %>
  </ul>
  </div>
</div>

<div id="sidebar">
  <%= render :partial => 'admin/menu' %>
</div>