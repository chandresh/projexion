<div id="content">
	<p class="success"><span><%= flash[:notice] %></span></p>
	
	<div>
        <p>
          <%= label_tag :name %><br />
          <%= @project_role.name %>
        </p>
      
        <% if @project_role.manager %>
        <p>
          <%= label_tag :manager_role %>
          <img src="/images/icons/accept.png"/>
        </p>
        <% end %>

        <p>
          <%= label_tag :role %><br />
          <%= @project_role.role %>
        </p>

    </div>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Project Roles', admin_project_roles_path, :class => 'list' %></li>
    <li><%= link_to 'Edit Project Role', edit_admin_project_role_path(@project_role), :class => 'edit'  %></li>
    <li><%= link_to 'Delete Project Role', admin_project_role_path(@project_role),
                :confirm => 'Are you sure?', :method => :delete, :class => 'delete' %></li>
  </ul> 
</div>  