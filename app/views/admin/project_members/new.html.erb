<div id="content">
    <div id="task">
        <h1>Assign User to Project</h1>

        <% form_for ([:admin, @project_member]) do |f| %>
            <%= f.error_messages %>

            <p>
                <%= f.label :project %><br/>
                <%= f.collection_select(:project_id, @projects, :id, :name, {:include_blank => true}) %>
            </p>

            <p>
                <%= f.label :project_role %><br/>
                <%= f.collection_select(:project_role_id, @project_roles, :id, :name, {:include_blank => true}) %>
            </p>

            <%= f.hidden_field(:user_id, :value => params[:user_id]) %>
          
            <%= f.submit 'Save', :class => 'save_btn' %>
          </div>

        <% end %>
    </div>
</div>

<div style="clear:both"></div>