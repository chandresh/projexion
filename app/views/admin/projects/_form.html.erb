<%= render 'shared/title/form', :target => @project %>

<div id="content">
  <p class="success"><span ><%= flash[:notice] %></span></p>
  
  <%= form_for ([:admin, @project]) do |f| %>
    <%= render "shared/error_messages", :target => @project %>

    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :vision %>
      <%= f.text_field :vision, :size => 45 %>
    </div>

    <%= f.submit 'Save', :class=> 'save_btn' %>
  <% end %>

  <% if @project.new_record? then %>
    <%= button_to 'Cancel', admin_path, :confirm => "Are you sure?", :method => :get, :class=> 'cancel_btn' %>
  <% else %>
    <%#= button_to 'Cancel', project_path(@project.code), :confirm => "Are you sure?", :method => :get, :class=> 'cancel_btn' %>
  <% end %>
</div>

