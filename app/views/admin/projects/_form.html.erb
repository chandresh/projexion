<%= render 'shared/title/form', :target => @project %>


<div id="content">
    <% form_for ([:admin, @project]) do |f| %>
      <% if f.object.errors.any? %>
        <div id="errorExplanation">
          <ul>
          <% f.object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <p>
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </p>

      <p>
        <%= f.label :code %><br />
        <%= f.text_field :code, :size => 5, :maxlength => 10 %>
      </p>

      <p>
        <%= f.label :vision %><br/>
        <%= f.text_field :vision, :size => 45 %>
      </p>

      <%= f.submit 'Save', :class=> 'save_btn' %>
    <% end %>
    
    <% if @project.new_record? then %>
      <%= button_to 'Cancel', admin_path, :confirm => "Are you sure?", :method => :get, :class=> 'cancel_btn' %>
    <% else %>
      <%= button_to 'Cancel', project_path(@project.code), :confirm => "Are you sure?", :method => :get, :class=> 'cancel_btn' %>
    <% end %>
</div>

<div id="sidebar">
  <ul>
    <% if @project.new_record? then %>
    <li><%= link_to 'Show Projects', projects_path, :class => 'list' %></li>
    <% else %>
    <li><%= link_to 'Project Dashboard', project_path(@project.code), :class => 'dashboard' %></li>
    <% end %>
  </ul>
</div>