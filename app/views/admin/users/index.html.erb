<div id="content">
<p class="success"><span><%= flash[:notice] %></span></p>

<table width="100%">
  <tr>
    <th>Login</th>
    <th>E-mail</th>
    <th>Last login</th>
    <th>&nbsp;</th>
  </tr>

<% @users.each do |user| %>
  <tr>
  	<td><%= user.login %></td>
    <td><%= user.email %></td>
    <td>
      <% unless user.last_login_at.nil? %>
          <%= user.last_login_at %>&nbsp;(<%= time_ago_in_words(user.last_login_at) %> ago)
      <% end %>
    </td>
    <td width="10%" style="text-align:center;">
     <% link_to admin_user_path(user) do %>                                        
        <img src="/images/icons/application_view_detail.png">
      <% end %>
    </td>
  </tr>
<% end %>
</table>
</div> 

<div id="sidebar">
  <ul>
    <li><%= link_to 'Add New User', new_admin_user_path, :class => 'add' %></li>
  </ul>
</div> 