<div id="content">
    <p class="success"><span><%= flash[:notice] %></span></p>

    <div>
        <p>
          <%= label_tag :login %><br />
          <%= h @user.login %>
        </p>
        
        <p>
          <%= label_tag :email %><br />
          <%= h @user.email %>
        </p>

        <p>
          <%= label_tag :admin %><br />
          <%= h @user.admin %>
        </p>

        <p>
          <%= label_tag(:last_login) %><br />
          <% unless @user.last_login_at.nil? %>
              <%= @user.last_login_at %>&nbsp;(<%= time_ago_in_words(@user.last_login_at) %> ago)
          <% end %>
        </p>
    </div>
    
    <div>
      <h2>Assigned Projects</h2>
      <table width="100%">
        <tr>
          <th>Project Name</th>
          <th>Project Role</th>
          <th>Status</th>
        </tr>
        <% @project_members.each do |project_member| %>
        <tr>
          <td><%= project_member.project.name %></td>
          <td><%= project_member.project_role.name %></td>
          <td style="text-align:center">
          	<% if project_member.status.eql? 'A' %>
          		<img src="/images/icons/accept.png">
          	<% else %>
          		<img src="/images/icons/delete.png">
          	<% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
</div>

<div id="sidebar">
  <ul>
  	<li><%= link_to 'Users', admin_users_path, :class => 'list' %></li>
    <li><%= link_to 'Edit User', edit_admin_user_path(@user), :class => 'edit'  %></li>
    <li><%= link_to 'Delete User', admin_user_path(@user),
                :confirm => 'Are you sure?', :method => :delete, :class => 'delete' %></li>
    <li><%= link_to 'Assign Project', new_admin_project_member_path(:user_id => @user), :class => 'add', :rel => 'facebox' %></li>
  </ul>
</div> 