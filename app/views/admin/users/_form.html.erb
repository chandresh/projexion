<div id="content">
	<p class="success"><span><%= flash[:notice] %></span></p>
	
    <% form_for ([:admin, @user]) do |f| %>
      <%= f.error_messages %>
	
	<p>
      <%= f.label :login %><br />
      <%= f.text_field :login %>
    </p>
    
    <p>
      <%= f.label :password, f.object.new_record? ? nil : "Change password" %><br />
      <%= f.password_field :password %>
    </p>
    
    <p>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </p>
    
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %><br />
    </p>

        <% if @user.new_record? %>
          <%= f.submit 'Save' %>
        <% else %>
          <%= f.submit 'Update' %>
        <% end %>
    <% end %>
</div>

<div id="sidebar">
    <ul>
      <li><%= link_to 'Users', admin_users_path, :class => 'list' %></li>
    </ul>
</div> 